<div class="narrow">

  <h1> <%= @brand.name %> </h1>
  <h1> <%= @brand.price %> </h1>

<h3>Edit Brand Name:</h3>
<form action="/brands/<%= @brand.id %>" method="post">
  <input type="hidden" name="_method" value="patch">
    <label for="update_name">New Name:</label>
    <input type="text" name="update_name" class="form-control" placeholder="Enter New Name">
    <br>
    <br>
    <button type="submit" class="btn btn-2">Change Name</button>
</form>

<h3>Edit Brand Price:</h3>
<form action="/brands/<%= @brand.id %>" method="post">
  <input type="hidden" name="_method" value="patch">
    <label for="update_price">New Price:</label>
    <input type="text" name="update_price" class="form-control" placeholder="Enter New Price">
    <br>
    <br>
    <button type="submit" class="btn btn-2">Change Price</button>
</form>



<form action="/stores/<%= @store.id %>" method="post" >
  <input name="_method" type="hidden" value="delete">
  <input name="delete_store" type="hidden" value="<%= @store.id %>">
  <button type="submit" class="btn btn-2">Remove Store</button>
</form>
<a href="/" class="btn btn-2" id="go-home">Home</a>

</div>
