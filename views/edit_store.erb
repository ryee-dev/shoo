<a href="/"><img src="../img/shoo_logo.png" alt="logo" id="home-logo"></a>
<div class="narrow">
  <h1> <%= @store.name %> </h1>
  <h1> <%= @store.location %> </h1>
  <hr>
  <p>
    <h3>Brands</h3>
    <% @assigned_brands.each do |brand| %>
        <%= brand.name %>
    <% end %>
  </p>
  <hr>
  <h3>Edit Store Name:</h3>
  <form action="/stores/<%= @store.id %>" method="post">
    <input type="hidden" name="_method" value="patch">
    <label for="update_name">New Name:</label>
    <input type="text" name="update_name" class="form-control" placeholder="Enter New Name">
    <button type="submit" class="btn btn-2">Change Name</button>
  </form>

  <h3>Edit Store Location:</h3>
  <form action="/stores/<%= @store.id %>" method="post">
    <input type="hidden" name="_method" value="patch">
    <label for="update_location">New Location:</label>
    <input type="text" name="update_location" class="form-control" placeholder="Enter New Location">
    <br>
    <button type="submit" class="btn btn-2">Change Location</button>
  </form>

  <form action="/stores/<%= @store.id %>/brands" method="post" class="form-container">
    <select id="brands_id" name="brands_id">
      <option disabled selected>-select-</option>
      <% @all_brands.each do |brand| %>
        <% unless @assigned_brands.include?(brand) %>
          <option value="<%=brand.id%>"><%= brand.name %></option>
        <% end %>
      <% end %>
    </select>
    <p><button type="submit" class="btn btn-2">Add brand</button></p>
  </form>

  <form action="/stores/<%= @store.id %>/brands" method="post" >
    <input name="_method" type="hidden" value="delete">
    <input name="delete_store" type="hidden" value="<%= @store.id %>">
    <button type="submit" class="btn btn-2">Remove Store</button>
  </form>
  <a href="/" class="btn btn-2" id="go-home">Home</a>
</div>
